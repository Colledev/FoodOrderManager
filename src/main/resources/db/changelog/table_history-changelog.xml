<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2" author="Colledev">
        <createTable tableName="table_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="table_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="occupied_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="released_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="table_history"
                baseColumnNames="table_id"
                constraintName="fk_table_history_table"
                referencedTableName="tables"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="table_history"
                baseColumnNames="customer_id"
                constraintName="fk_table_history_customer"
                referencedTableName="customer"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
